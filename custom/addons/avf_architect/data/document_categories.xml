<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Main Document Categories -->
        <record id="doc_category_drawings" model="architect.document.category">
            <field name="name">Technical Drawings</field>
            <field name="code">DRAW</field>
        </record>

        <record id="doc_category_specifications" model="architect.document.category">
            <field name="name">Specifications</field>
            <field name="code">SPEC</field>
            <field name="sequence">20</field>
            <field name="allowed_file_types">pdf,doc,docx</field>
            <field name="max_file_size">50</field>
            <field name="color">3</field>
            <field name="description">Technical specifications and standards</field>
        </record>

        <record id="doc_category_reports" model="architect.document.category">
            <field name="name">Reports</field>
            <field name="code">RPT</field>
            <field name="sequence">30</field>
            <field name="allowed_file_types">pdf,doc,docx,xls,xlsx</field>
            <field name="max_file_size">75</field>
            <field name="color">5</field>
            <field name="description">Project reports, studies, and analyses</field>
        </record>

        <record id="doc_category_contracts" model="architect.document.category">
            <field name="name">Contracts</field>
            <field name="code">CNT</field>
            <field name="sequence">40</field>
            <field name="allowed_file_types">pdf,doc,docx</field>
            <field name="max_file_size">25</field>
            <field name="color">7</field>
            <field name="description">Contracts, agreements, and legal documents</field>
        </record>

        <record id="doc_category_permits" model="architect.document.category">
            <field name="name">Permits &amp; Approvals</field>
            <field name="code">PRM</field>
            <field name="sequence">50</field>
            <field name="allowed_file_types">pdf,jpg,png</field>
            <field name="max_file_size">25</field>
            <field name="color">9</field>
            <field name="description">Building permits, approvals, and clearances</field>
        </record>

        <record id="doc_category_photos" model="architect.document.category">
            <field name="name">Photos &amp; Media</field>
            <field name="code">PHT</field>
            <field name="sequence">60</field>
            <field name="allowed_file_types">jpg,jpeg,png,gif,mp4,avi</field>
            <field name="max_file_size">200</field>
            <field name="color">11</field>
            <field name="description">Project photos, videos, and multimedia content</field>
        </record>

        <!-- Drawing Subcategories -->
        <record id="doc_subcat_architectural" model="architect.document.subcategory">
            <field name="name">Architectural Drawings</field>
            <field name="category_id" ref="doc_category_drawings"/>
            <field name="sequence">10</field>
            <field name="description">Floor plans, elevations, sections, and details</field>
        </record>

        <record id="doc_subcat_structural" model="architect.document.subcategory">
            <field name="name">Structural Drawings</field>
            <field name="category_id" ref="doc_category_drawings"/>
            <field name="sequence">20</field>
            <field name="description">Foundation plans, framing plans, and structural details</field>
        </record>

        <record id="doc_subcat_mep" model="architect.document.subcategory">
            <field name="name">MEP Drawings</field>
            <field name="category_id" ref="doc_category_drawings"/>
            <field name="sequence">30</field>
            <field name="description">Mechanical, electrical, and plumbing drawings</field>
        </record>

        <!-- Specification Subcategories -->
        <record id="doc_subcat_tech_spec" model="architect.document.subcategory">
            <field name="name">Technical Specifications</field>
            <field name="category_id" ref="doc_category_specifications"/>
            <field name="sequence">10</field>
            <field name="description">Material and construction specifications</field>
        </record>

        <record id="doc_subcat_quality_spec" model="architect.document.subcategory">
            <field name="name">Quality Standards</field>
            <field name="category_id" ref="doc_category_specifications"/>
            <field name="sequence">20</field>
            <field name="description">Quality control and testing specifications</field>
        </record>

        <!-- Report Subcategories -->
        <record id="doc_subcat_survey" model="architect.document.subcategory">
            <field name="name">Survey Reports</field>
            <field name="category_id" ref="doc_category_reports"/>
            <field name="sequence">10</field>
            <field name="description">Site surveys and investigation reports</field>
        </record>

        <record id="doc_subcat_environmental" model="architect.document.subcategory">
            <field name="name">Environmental Reports</field>
            <field name="category_id" ref="doc_category_reports"/>
            <field name="sequence">20</field>
            <field name="description">Environmental impact and compliance reports</field>
        </record>

        <record id="doc_subcat_progress" model="architect.document.subcategory">
            <field name="name">Progress Reports</field>
            <field name="category_id" ref="doc_category_reports"/>
            <field name="sequence">30</field>
            <field name="description">Project progress and status reports</field>
        </record>

        <!-- Document Tags -->
        <record id="doc_tag_urgent" model="architect.document.tag">
            <field name="name">Urgent</field>
            <field name="color">1</field>
            <field name="description">Documents requiring immediate attention</field>
        </record>

        <record id="doc_tag_confidential" model="architect.document.tag">
            <field name="name">Confidential</field>
            <field name="color">2</field>
            <field name="description">Confidential documents with restricted access</field>
        </record>

        <record id="doc_tag_approved" model="architect.document.tag">
            <field name="name">Approved</field>
            <field name="color">10</field>
            <field name="description">Documents that have been approved</field>
        </record>

        <record id="doc_tag_draft" model="architect.document.tag">
            <field name="name">Draft</field>
            <field name="color">4</field>
            <field name="description">Draft documents under development</field>
        </record>

        <record id="doc_tag_final" model="architect.document.tag">
            <field name="name">Final</field>
            <field name="color">9</field>
            <field name="description">Final version documents</field>
        </record>

        <!-- Document Templates -->
        <record id="doc_template_dpr" model="architect.document.template">
            <field name="name">DPR Template</field>
            <field name="document_type">report</field>
            <field name="default_category_id" ref="doc_category_reports"/>
            <field name="description">Standard template for Detailed Project Report</field>
            <field name="instructions">
                <![CDATA[
                <h3>DPR Template Usage Instructions</h3>
                <ol>
                    <li>Fill in project basic information</li>
                    <li>Complete technical specifications section</li>
                    <li>Add financial details and cost estimates</li>
                    <li>Include implementation timeline</li>
                    <li>Add risk assessment and mitigation measures</li>
                </ol>
                ]]>
            </field>
        </record>

        <record id="doc_template_compliance" model="architect.document.template">
            <field name="name">Compliance Report Template</field>
            <field name="document_type">report</field>
            <field name="default_category_id" ref="doc_category_reports"/>
            <field name="description">Template for compliance and regulatory reports</field>
            <field name="instructions">
                <![CDATA[
                <h3>Compliance Report Template</h3>
                <ol>
                    <li>Identify applicable regulations</li>
                    <li>Document compliance status</li>
                    <li>List required actions</li>
                    <li>Include supporting documentation</li>
                    <li>Add timeline for completion</li>
                    <li>Add timeline for completion</li>
                </ol>
                ]]>
            </field>
        </record>
    </data>
</odoo>